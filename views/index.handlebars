<div class="container">
    <header class="text-center jumbotron">
        <h1 class="text-lg">Big Kahuna Burger</h1>

        <p>"Mmm-mmmm! This is a tasty burger!"</p>
    </header>

    <form action="create-form">
        <div class="form-group text-center col-form-label-lg">
            <input type="text" placeholder="Burger Name" id="burger_name" name="burger_name">

            <button type="submit" id="addBurger">Create Burger</button>
        </div>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <h2 class="text-center">Burgers to be Eaten</h2>
                <ul class="">
                    {{#each hamburgers}}
                    {{#unless hamburger_devoured}}
                    <div class="row text-center">
                        {{>hamburgers/partial devoured=true}}
                    </div>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <h2 class="text-center">Burgers Eaten</h2>
                <ul>
                    {{#each hamburgers}}
                    {{#if hamburger_devoured}}
                    <div class="row text-center">
                        {{>hamburgers/partial devoured=false}}
                    </div>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>